<h1>Todas as tasks</h1>

<ul class="task-list">
  {{#each tasks}}
    <li>
      {{#if this.done}}
        <a href="/tasks/edit/{{this.id}}" class="title done">{{this.title}}</a>
      {{else}}
      <a href="/tasks/edit/{{this.id}}" class="title">{{this.title}}</a>
      {{/if}}

      <div class="actions">
        <form action="/tasks/updatestatus" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="hidden" name="done" value="{{this.done}}">
            
            <button type="submit">
               <i class="bi bi-check2"></i>
            </button>
        </form>
        
        <form action="/tasks/edit/{{this.id}}">
          <button type="submit">
            <input type="hidden" name="id" value="{{this.id}}">
            <i class="bi bi-pencil-square"></i>
          </button>
        </form>

        <form action="/tasks/remove" method="POST">
          <button type="submit">
            <input type="hidden" name="id" value="{{this.id}}">
            <i class="bi bi-x-lg"></i>
          </button>
        </form>
      </div>
    </li>
  {{/each}}
</ul>